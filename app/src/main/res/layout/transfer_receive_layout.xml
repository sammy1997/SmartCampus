<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I WANT TO"
        android:textSize="29px"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/transfer_money"
        android:layout_width="300dp"
        android:layout_marginTop="40dp"
        android:layout_height="36dp"
        android:text="TRANSFER MONEY TO A FRIEND"
        android:textSize="25px"
        android:textColor="#fff"
        android:background="@drawable/white_border_button"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/receive_money"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:text="RECEIVE MONEY"
        android:textSize="25px"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_border_button"/>

    <ProgressBar
        android:id="@+id/progressBar4"
        android:background="@drawable/progress_bar"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>