<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#878787"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sombuddha Chakravarty"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/developer_name"
                    android:textSize="16sp"/>
                <TextView
                    android:text="Dept. of Visual Media"
                    android:layout_width="wrap_content"
                    android:id="@+id/developer_dept"
                    android:layout_height="wrap_content"
                    android:textColor="#878787"
                    android:textSize="11sp"/>
                <TextView
                    android:text="Android Developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/developer_role"
                    android:textColor="#878787"
                    android:textSize="11sp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:id="@+id/developer_phn"
                        android:layout_height="20dp"
                        android:src="@drawable/contact"
                        />
                    <ImageView
                        android:id="@+id/developer_mail"
                        android:layout_margin="10dp"
                        android:src="@drawable/mail"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>