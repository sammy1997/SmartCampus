<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sammy1997.bitswallet.WalletActivity">
        <FrameLayout android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            xmlns:android="http://schemas.android.com/apk/res/android"
            >

            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/menu_background"
                android:elevation="5dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/wallet"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="44dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX=".7"
                        android:scaleY=".7"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_wallet_icon" />

                    <ImageButton
                        android:id="@+id/shops"
                        android:layout_width="58dp"
                        android:layout_height="63dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="37dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleX=".55"
                        android:scaleY=".55"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/grocery" />
                </RelativeLayout>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/central"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_circle"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:elevation="15dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/pay"
                />

            <FrameLayout
                android:id="@+id/fragment"
                android:name="com.example.sammy1997.bitswallet.fragments.WalletHomeFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp" />
        </FrameLayout>

        <!-- include bottom sheet -->
        <include layout="@layout/bottom_sheet_add_to_cart" />
    </android.support.design.widget.CoordinatorLayout>