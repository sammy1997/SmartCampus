<FrameLayout android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/overlayCard"
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:background="#fff"
        android:clickable="true"
        android:elevation="20dp"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:src="@drawable/close_black" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="ORDER #2123"
            android:textColor="#818181"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="DOMINO'S PIZZA"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="FEB 23, 2018 IST 20:00"
            android:textColor="#818181"
            android:textSize="10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/billed_item_list"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grand_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="INR 1,50,000"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TOTAL"
                android:textColor="#818181"
                android:textSize="10dp" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_uid"
            style="?android:attr/progressBarStyle"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="@color/colorAccent"
            android:progressBackgroundTint="@color/colorAccent"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancel_order"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/active_btn"
            android:text="GENERATE UID"
            android:textColor="#fff"
            android:textSize="14dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/menu_background"
        android:elevation="5dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/qr_scanner"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="44dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:scaleX=".7"
                android:scaleY=".7"
                android:src="@drawable/qr" />

            <ImageButton
                android:id="@+id/pay_receive"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:scaleX=".6"
                android:scaleY=".6"
                android:src="@drawable/pay_icon" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/central"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_circle"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:elevation="15dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/food_icon"
        />

    <FrameLayout
        android:id="@+id/fragment"
        android:name="com.example.sammy1997.bitswallet.fragments.WalletHomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</FrameLayout>