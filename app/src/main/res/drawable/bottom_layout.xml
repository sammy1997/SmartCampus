<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="100dp"
        android:height="90dp"
        android:gravity="top|center">
        <shape android:shape="oval"
            >
            <gradient
                android:startColor="#ee5076"
                android:endColor="#ee5076"
                />
        </shape>
    </item>

    <item
        android:top="30dp"
        >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ee5076"
                android:endColor="#906dfd"
                android:angle="-90"
                />
        </shape>
    </item>
</layer-list>